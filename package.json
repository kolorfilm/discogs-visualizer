{
  "name": "discogs-visualizer",
  "version": "2.0.0",
  "description": "An app to visualize different data from discogs.com.",
  "author": "Michael Päßler",
  "scripts": {
    "dev": "nodemon server/index.ts",
    "build": "next build",
    "start": "NODE_ENV=production node server/index.ts",
    "lint": "next lint",
    "lintAll": "prettier --check . && next lint . --cache --ext .js,.jsx,.ts,.tsx && stylelint **/*.scss && tsc --noEmit",
    "testAll": "jest --maxWorkers=2 --all --coverage --verbose=true",
    "prettier": "prettier --check .",
    "stylelint": "stylelint **/*.scss",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "disconnect": "^1.2.2",
    "dotenv-webpack": "^8.0.0",
    "express": "^4.18.1",
    "highcharts": "^10.2.0",
    "identity-obj-proxy": "^3.0.0",
    "next": "^12.2.2",
    "nookies": "^2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.53.0",
    "ts-node": "^10.8.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "body-parser": "^1.20.0",
    "classnames": "^2.3.1",
    "eslint": "^8.19.0",
    "eslint-config-next": "^12.2.2",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/next-env.d.ts",
      "!<rootDir>/next.config.js",
      "!.next/**",
      "!**/node_modules/**",
      "!**/libs/**"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      ",<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    }
  }
}
